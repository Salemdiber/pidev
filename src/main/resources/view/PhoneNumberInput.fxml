<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.PhoneNumberInputController">
    <VBox spacing="10" alignment="CENTER" styleClass="phone-number-input">
        <Label text="Entrez votre numéro de téléphone:" />
        <TextField fx:id="phoneNumberField" promptText="Numéro de téléphone" />
        <Button text="Envoyer" onAction="#handleSend" />
    </VBox>
</AnchorPane>