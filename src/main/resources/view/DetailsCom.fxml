<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.DetailsComController">

    <children>
        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0">

            <!-- Titre de la fenêtre -->
            <AnchorPane prefHeight="80.0" prefWidth="500.0">
                <Label layoutX="110.0" layoutY="20.0" prefHeight="40.0" prefWidth="300.0" text="Détails du Commentaire">
                    <font>
                        <Font name="Century Gothic Bold" size="22.0" />
                    </font>
                </Label>
            </AnchorPane>

            <!-- Label affichant le contenu du commentaire -->
            <Label layoutX="30.0" layoutY="91.0" prefHeight="31.0" prefWidth="120.0" text="Commentaire:" />
            <Label fx:id="descCommentLabel" layoutX="151.0" layoutY="99.0" prefHeight="60.0" prefWidth="250.0" text="Contenu Commentaire" wrapText="true" />

            <!-- Boutons Modifier et Supprimer -->
            <Button fx:id="btnModifier" layoutX="120.0" layoutY="230.0" mnemonicParsing="false" onAction="#modifierCommentaire" text="Modifier" />

            <Button fx:id="btnSupprimer" layoutX="240.0" layoutY="230.0" mnemonicParsing="false" onAction="#supprimerCommentaire" text="Supprimer" />

        </Pane>
    </children>
</AnchorPane>
