<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="371.0" layoutY="276.0" prefHeight="512.0" prefWidth="960.0" spacing="20.0" stylesheets="/styles/style.css">
          <padding>
              <Insets bottom="50" left="50" right="50" top="50" />
          </padding>
      
          <StackPane VBox.vgrow="ALWAYS">
              <Label prefHeight="91.0" prefWidth="146.0" styleClass="title_page" text="Login" />
          </StackPane>
      
          <HBox alignment="CENTER" spacing="10.0">
              <Label styleClass="labelnames" text="Email:" />
              <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="inputFields" />
          </HBox>
      
          <HBox alignment="CENTER" spacing="10.0">
              <Label styleClass="labelnames" text="Mot de passe:" />
              <PasswordField fx:id="mdpField" promptText="Entrez votre mot de passe" styleClass="inputFields" />
          </HBox>
      
          <Button fx:id="loginButton" onAction="#handleLoginButtonAction" styleClass="add_terrain" text="Se connecter" />
      </VBox>
   </children>
</AnchorPane>
