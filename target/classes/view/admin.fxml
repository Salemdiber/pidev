<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="/style/style.css" fx:controller="org.example.controller.AdminController">
    <left>
        <VBox spacing="10.0" alignment="CENTER" styleClass="sidebar">
            <Button text="Edit Profil" styleClass="sidebar-button"/>
            <Button text="Admin Dashboard" styleClass="sidebar-button"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <StackPane VBox.vgrow="ALWAYS">
                <Label text="Admin Panel" styleClass="title_page"/>
            </StackPane>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Nom:" styleClass="labelnames"/>
                <TextField fx:id="nomField" editable="false" styleClass="inputFields"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Prénom:" styleClass="labelnames"/>
                <TextField fx:id="prenomField" editable="false" styleClass="inputFields"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Email:" styleClass="labelnames"/>
                <TextField fx:id="emailField" editable="false" styleClass="inputFields"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Rôle:" styleClass="labelnames"/>
                <TextField fx:id="roleField" editable="false" styleClass="inputFields"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
